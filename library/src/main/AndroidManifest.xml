<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juanimoli.strictmodenotifier">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application>
        <service
            android:name="com.juanimoli.strictmodenotifier.LogWatchService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name="com.juanimoli.strictmodenotifier.StrictModeReportActivity"
            android:enabled="false"
            android:icon="@drawable/strictmode_notifier_ic_launcher"
            android:label="@string/strictmode_notifier_app_name"
            android:taskAffinity="com.nshmura.strictmodenotifier"
            android:theme="@style/StrictModeNotifier.AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.juanimoli.strictmodenotifier.StrictModeReportDetailActivity"
            android:theme="@style/StrictModeNotifier.AppTheme" />

    </application>
</manifest>
