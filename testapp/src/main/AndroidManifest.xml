<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juanimoli.strictmodenotifier.testapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.juanimoli.strictmodenotifier.testapp.ClassInstanceLimitActivity" />
        <activity android:name="com.juanimoli.strictmodenotifier.testapp.LeakedClosableObjectsActivity" />

        <receiver android:name=".LeakedBroadcastReceiver">
            <intent-filter>
                <action android:name="LeakAction" />
            </intent-filter>
        </receiver>

        <service android:name=".CustomLogWatchService" />
    </application>

</manifest>